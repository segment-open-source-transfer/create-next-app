{
  "name": "create-next-app",
  "description": "Create Next.js apps in one command",
  "version": "0.5.3",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint *.js 'lib/**/*.js'",
    "precommit": "lint-staged",
    "fmt": "prettier --write *.{md,js,json} .github/*.md 'lib/**/*.{js,json}'"
  },
  "bin": {
    "create-next-app": "./bin.js"
  },
  "engines": {
    "node": ">=4"
  },
  "repository": "segmentio/create-next-app",
  "bugs": {
    "url": "https://github.com/segmentio/create-next-app/issues"
  },
  "dependencies": {
    "ansi-escapes": "^2.0.0",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "cross-spawn": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "execa": "^0.6.3",
    "fs-extra": "^3.0.0",
    "mkdirp-then": "^1.2.0",
    "ms": "^1.0.0",
    "mz": "^2.6.0",
    "ora": "^1.2.0",
    "prettier": "^1.13.7",
    "promise": "^7.1.1"
  },
  "keywords": [
    "next",
    "react",
    "next.js",
    "create-next-app",
    "create-react-app",
    "boilerplate"
  ],
  "devDependencies": {
    "babel-eslint": "^8.2.5",
    "eslint": "^5.0.1",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "overrides": [
      {
        "files": [
          "lib/*.js",
          "lib/utils/*.js"
        ],
        "rules": {
          "no-console": 0
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "useTabs": false,
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
